{
    "name": "CoBol",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popups/popup.html"
    },
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Alt+C",
                "mac": "Alt+C"
            }
        }
    },
    "icons": {
        "16": "images/Cobol_icon.png",
        "128": "images/Cobol_icon.png"
    },
    "permissions": [
        "activeTab",
        "scripting"
    ],

    "host_permissions": [
        "https://assets.github.sec.samsung.net/assets/*",
        "https://avatars.github.sec.samsung.net/*"
    ]
}